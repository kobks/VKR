                                size: self.size
                                pos: self.pos
                        color: (0, 0, 0, 1)
                    TextInput:
                        id: text_input_goals

                        pos_hint: {'center_x': 1, 'y': 0.35}
                        size_hint: (.2, None)
                        height: 30
                        multiline: False
                        input_type: "number"
                        input_filter: "int"

                BoxLayout:

                    Label:
                        size_hint: 0.3, 1
                        text: "Equipment availible"
                        background_color: (1, 1, 1, 1)
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        color: (0, 0, 0, 1)
                    TextInput:
                        id: text_input_equip

                        pos_hint: {'center_x': 1, 'y': 0.35}
                        size_hint: (.2, None)
                        height: 30
                        font_size: "45sp"
                        multiline: False
                        input_type: "number"
                        input_filter: "int"

                BoxLayout:

                    Label:
                        size_hint: 0.3, 1
                        text: "Level (Intermediate, Beginner, Expert)"
                        background_color: (1, 1, 1, 1)
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        color: (0, 0, 0, 1)
                    TextInput:
                        id: text_input_level

                        pos_hint: {'center_x': 1, 'y': 0.3}
                        size_hint: (.2, None)
                        height: 30
                        font_size: "45sp"
                        multiline: False
                        input_type: "number"
                        input_filter: "int"


                BoxLayout:
                    Button:
                        text: "Calculate BMI and Calorie intake"
                        font_size: 20

                        on_release:
                            root.calculate_bmi_cal()

